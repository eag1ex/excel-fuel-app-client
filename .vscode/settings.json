{
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "**/*.spec.ts": false

    },
      "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "node-module-intellisense.scanBuiltinModules": true,
    "node-module-intellisense.scanDevDependencies": true,
    "node-module-intellisense.scanFileModules": true,
    "extensions.autoUpdate": false,
    "editor.wordWrap": "on",
    "sasslint.enable":true,
    "jslint.enable": false,
    "eslint.validate": [ "javascript", "javascriptreact", { "language": "html", "autoFix": true } ],

    "peacock.affectActivityBar": true,
    "peacock.affectStatusBar": true,
    "peacock.affectTitleBar": true,
    "eslint.options": { "configFile": "eslintrc.json" },
    "peacock.elementAdjustments": {
      "activityBar": "lighten"
    },
    "standard.options": {
        "ignore": [
            "node_modules/**"
        ],
        "plugins": ["html"],
        "parser": "babel-eslint",
        "envs": ["jest"]
    },
    "[scss]": {
      "editor.formatOnSave": true,

    },
    "[html]": {
      "editor.formatOnSave": true,
      "editor.tabSize": 2
    },

    "html.format.enable": true,
    "angular-template-formatter.indentWidth": 2,
    "angular-template-formatter.closeTagSameLine": true,
    "angular-template-formatter.useSpaces": true,
    "standard.enable": false,
    "commentAnchors.workspace.enabled": true,
    "commentAnchors.workspace.excludeFiles": "**/{node_modules,.git,.idea,target,out,build,vendor}/**/*",
      "javascript.updateImportsOnFileMove.enabled": "always",
      "[javascript]": {
          "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.fixAll.tslint": "explicit",
      "source.fixAll.stylelint": "explicit"
    }

  }
